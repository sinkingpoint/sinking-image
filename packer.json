{
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "ap-southeast-1",
        "source_ami": "ami-a1288ec2",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "sinking-ubuntu-master {{timestamp}}"
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "sudo apt-get -y install puppet"
        ]
      },
      {
        "type": "puppet-masterless",
        "manifest_file": "manifests/site.pp"
      }
    ]
}
